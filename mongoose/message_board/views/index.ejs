


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>dahsboard</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="style.css">
  <script type ="text/javascript">
        $(document).ready(function (){
        var messages = <%- JSON.stringify(messages)%>;
     
        var output = document.getElementById("output");
        for (var i = 0; i < messages.length; i++) {
        output.innerHTML += " <div class='bubble'><input type='hidden' value='id'> <blockquote> "+ messages[i].content +" </blockquote> <div></div><cite>"+messages[i].name +"<br><br><br><p>COMMENTS:</p></cite></div>"
        for (var j = 0; i < messages[i].comments.length; i++){
            output.innerHTML +="<p>Name:</p>"+messages[i].comments[j].name +"<p>Comment:</p>"+ messages[i].comments[j].content
        }
        output.innerHTML +="<div id='smaller_div'><form action='/add_comment/"+messages[i]._id+"' method='POST'><p>Name:</p><input type='text' name='name'><p>Comment:</p><p><textarea name='content'></textarea></p><input type='submit' value='Post comment'></form></div>"
    }

});
    </script>
</head>
<body>
  
<h1>Dojo Message Board</h1>

<section role="complementary" class="simple white-back quotes no-fouc">
    <blockquote>
    <h3></h3>
   </blockquote>
</section>


<section class="quotes">
 <blockquote>
  
    <form action="/add_message" method="POST">
        <p>Name:</p>
        <input type="text" name="name">
        <p>Message:</p>
        <p><textarea name="message"></textarea></p>
        <input type="submit" value="Post Message">
    </form>
       </blockquote>
</section>
<section class="quotes">
    <div id="output"> </div>
</section>
</body>
</html>